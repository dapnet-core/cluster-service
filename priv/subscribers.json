{
    "_id": "_design/subscribers",
    "version": 3,
    "views": {
        "byId": {
            "map": "function (doc) {
                emit(doc._id, 1);
            }"
        },
        "byGroup": {
            "reduce": "_count",
            "map": "function (doc) {
                if (doc.groups) {
                    doc.groups.forEach(function(group) {
                        emit(group.split('.'));
                    })
                }
            }"
        }
    },
    "shows": {
        "owners": "function(doc, req) {
            return {
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(doc.owners)
            };
        }"
    },
    "filters": {
        "sync": "function (doc, req) { return doc._id.charAt(0) != '_'; }"
    },
    "language": "javascript"
}
